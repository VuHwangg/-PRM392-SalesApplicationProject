<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_order_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_productorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iphone15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_productorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Iphone15"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_productorder"
            app:layout_constraintStart_toEndOf="@+id/img_productorder"
            app:layout_constraintTop_toTopOf="@+id/img_productorder"
            app:layout_constraintVertical_bias="0.03" />

        <TextView
            android:id="@+id/tv_price_productorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="25000000"
            android:textColor="@color/main_red"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_name_productorder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_name_productorder"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_productorder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" VNĐ"
            android:textColor="@color/main_red"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_productorder"
            app:layout_constraintStart_toEndOf="@+id/tv_price_productorder"
            app:layout_constraintTop_toTopOf="@+id/tv_price_productorder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quantity_productorder"
            app:layout_constraintEnd_toStartOf="@+id/tv_quantity_productorder"
            app:layout_constraintTop_toTopOf="@+id/tv_quantity_productorder" />

        <TextView
            android:id="@+id/tv_quantity_productorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>